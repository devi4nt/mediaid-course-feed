{
    "compilerOptions": {
        "noImplicitAny": true,
        "module": "es2015",
        "target": "es5",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "declaration": false,
        "outDir": "dist",
        "lib": ["es2015", "dom"],
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "rootDir": "src/."
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
}
